<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dennisthicklin.newamericanow">

    <application
        android:allowBackup="true"
        android:icon="@drawable/splashlogo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        android:theme="@style/Theme.AppCompat.NoActionBar"
        <activity
            android:name=".UI.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UI.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UI.WritingVocabActivity"
            android:label="@string/title_activity_writing_vocab" />
        <activity
            android:name=".UI.HistoryActivity"
            android:label="@string/title_activity_history" />
        <activity
            android:name=".UI.AmGovActivity"
            android:label="@string/title_activity_amgov" />
        <activity
            android:name=".UI.ReadingVocabActivity"
            android:label="@string/title_activity_readingvocab"></activity>
    </application>

</manifest>
